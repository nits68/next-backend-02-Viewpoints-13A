generator client {
  provider      = "prisma-client-js"
  output        = "../app/prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Location {
  id           Int    @id @map("_id")
  locationName String @unique

  viewpoints Viewpoint[]

  @@map("locations")
}

model Viewpoint {
  id            Int      @id @map("_id")
  built         DateTime? @db.Date
  description   String
  height        Float?
  imageUrl      String @default("https://nits68.github.io/static/viewpoints/no-img.jpg")
  location_id   Int
  mountain      String
  viewpointName String

  location Location? @relation(fields: [location_id], references: [id])

  @@map("viewpoints")
}
